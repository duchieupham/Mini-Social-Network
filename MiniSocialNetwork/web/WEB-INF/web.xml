<?xml version="1.0" encoding="UTF-8"?>
<web-app version="2.5" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd">
    <servlet>
        <servlet-name>MainController</servlet-name>
        <servlet-class>msocial.controllers.MainController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>LoginController</servlet-name>
        <servlet-class>msocial.controllers.LoginController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>StartupController</servlet-name>
        <servlet-class>msocial.controllers.StartupController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>SignoutController</servlet-name>
        <servlet-class>msocial.controllers.SignoutController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>DetailPostController</servlet-name>
        <servlet-class>msocial.controllers.DetailPostController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>InsertCommentController</servlet-name>
        <servlet-class>msocial.controllers.InsertCommentController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>UpdateEmotionController</servlet-name>
        <servlet-class>msocial.controllers.UpdateEmotionController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>MainController</servlet-name>
        <url-pattern>/MainController</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>LoginController</servlet-name>
        <url-pattern>/LoginController</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>StartupController</servlet-name>
        <url-pattern>/StartupController</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>SignoutController</servlet-name>
        <url-pattern>/SignoutController</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>DetailPostController</servlet-name>
        <url-pattern>/DetailPostController</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>InsertCommentController</servlet-name>
        <url-pattern>/InsertCommentController</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>UpdateEmotionController</servlet-name>
        <url-pattern>/UpdateEmotionController</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <welcome-file-list>
        <welcome-file>MainController</welcome-file>
    </welcome-file-list>
    <resource-ref>
        <description>Resource reference to javax.sql.Connection</description>
        <res-ref-name>MSSQLConnection</res-ref-name>
        <res-type>javax.sql.DataSource</res-type>
        <res-auth>Container</res-auth>
        <res-sharing-scope>Shareable</res-sharing-scope>
    </resource-ref>
</web-app>
